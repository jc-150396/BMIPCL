<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:bmiPCL"
             x:Class="bmiPCL.MainPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="身長(cm)"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Text="170"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                x:Name="height" />

            <Label Text="体重(kg)"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Text="50"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                x:Name="weight"  />

            
            <Button Text="BMIの計算結果"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                    Clicked="Button_Clicked"/>
            
        </StackLayout>

        <StackLayout>

            <Label Text="結果を表示" 
                  VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   x:Name="kekka"/>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>